<resources>


    <style name="MainTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">@color/colorSecondary</item>
        <item name="colorPrimaryDark">@color/colorSecondary</item>
        <item name="colorAccent">@color/colorSecondaryDark</item>
        <item name="android:fontFamily">@font/kanit</item>
    </style>

    <style name="AppThemeD" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/darkGreen</item>
        <item name="android:fontFamily">@font/kanit</item>
    </style>

    <style name="MainThemeD" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">@color/darkGreen30</item>
        <item name="colorPrimaryDark">@color/darkGreen30</item>
        <item name="colorAccent">@color/darkGreen</item>
        <item name="android:fontFamily">@font/kanit</item>
    </style>


    <style name="ErrorText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="HintText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextInputLayoutAppearance" parent="Widget.Design.TextInputLayout">
        <!-- reference our hint & error styles -->
        <item name="hintTextAppearance">@style/HintText</item>
        <item name="errorTextAppearance">@style/ErrorText</item>
        <item name="android:background">@drawable/textinput_bg</item>
    </style>

    <style name="TextInputLayoutAppearanceD" parent="Widget.Design.TextInputLayout">
        <!-- reference our hint & error styles -->
        <item name="hintTextAppearance">@style/HintText</item>
        <item name="errorTextAppearance">@style/ErrorText</item>
        <item name="android:background">@drawable/textinput_bg_dark</item>
    </style>

    <style name="DividerHorizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/dividerColor</item>
    </style>
    <style name="DividerVertical">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/dividerColor</item>
    </style>

    <style name="DividerHorizontalD">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/dividerColorDark</item>
    </style>

    <style name="ExpandableBottomBar">
        <item name="exb_backgroundColor">#FFF</item>
        <item name="exb_backgroundCornerRadius">0dp</item>
        <item name="exb_itemInactiveColor">#000</item>
        <item name="exb_itemBackgroundCornerRadius">30dp</item>
        <item name="exb_itemBackgroundOpacity">0.2</item>
        <item name="exb_transitionDuration">100</item>
        <item name="exb_item_vertical_margin">24dp</item>
        <item name="exb_item_horizontal_margin">5dp</item>
        <item name="exb_item_vertical_padding">10dp</item>
        <item name="exb_item_horizontal_padding">15dp</item>
    </style>

    <style name="alert_dialog" parent="android:Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@color/float_transparent</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.4</item>
    </style>

    <style name="dialog_blue_button" parent="android:Widget.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">31dp</item>
        <item name="android:background">@drawable/blue_button_background</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">21dp</item>
        <item name="android:paddingRight">21dp</item>
        <item name="android:textColor">@color/button_text_color</item>
    </style>

    <style name="TableHeader" parent="Widget.AppCompat.TextView">
        <item name="android:singleLine">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ItemCardView">
        <item name="android:layout_marginVertical">@dimen/recycler_view_margin_vertical</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:elevation">0dp</item>
        <item name="contentPadding">@dimen/recycler_view_item_padding</item>
    </style>

    <style name="TableFieldTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TableFieldImageView">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>


    <style name="AppDialogTheme">
        <!-- parent="android:Theme.Holo.Dialog.NoActionBar" -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:textColorPrimary">#F25A04</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>



    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowDisablePreview">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/colorPrimary</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
    </style>

    <style name="AppThemeCROP" parent="Base.Theme.AppCompat">
        <item name="colorPrimary">@color/rdo_gender_select</item>
        <item name="colorPrimaryDark">@color/rdo_gender_select</item>
        <item name="colorAccent">@color/rdo_gender_select</item>
        <item name="android:navigationBarColor">@color/rdo_gender_select</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
    </style>



    <style name="AppThemeSplash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowDisablePreview">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:navigationBarColor">@color/water_color</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:soundEffectsEnabled">true</item>
        <item name="android:hapticFeedbackEnabled">true</item>
    </style>

    <style name="MyDatePickerDialogTheme" parent="android:Theme.Material.Light.Dialog">
        <item name="android:colorAccent">?attr/colorPrimaryDark</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <!--<item name="android:windowExitAnimation">@anim/slide_bottom</item>-->
    </style>

    <style name="Theme.Transparent" parent="android:Theme">
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="my_cardview">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/drawable_cardview</item>
    </style>

    <style name="my_cardview2">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/dp_20</item>
        <item name="android:background">@drawable/drawable_cardview_2</item>
    </style>

    <!-- ===============================================  -->


    <style name="my_lbl">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dp_20</item>
        <item name="android:layout_marginBottom">@dimen/dp_5</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/dp_12</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/calibri_light</item>
    </style>

    <style name="my_lbl_bold">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/dp_14</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/calibri_bold</item>
    </style>

    <style name="my_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">150dp</item>
        <item name="android:background">@drawable/drawable_button</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/dp_17</item>
        <item name="android:singleLine">true</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/calibri_light</item>
    </style>

    <style name="my_button2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/drawable_button</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/dp_11</item>
        <item name="android:singleLine">true</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/calibri_regular</item>
    </style>

    <!-- ===============================================  -->

    <style name="vertical_line">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@color/line</item>
    </style>

    <style name="horizontal_line">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/line</item>
    </style>

    <!-- ===============================================  -->

    <style name="toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:paddingStart">@dimen/dp_5</item>
        <item name="android:paddingEnd">@dimen/dp_5</item>
    </style>
    <!--<item name="android:background">?attr/colorPrimaryDark</item>-->

    <style name="toolbar_main_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:clickable">false</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:padding">@dimen/dp_3</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/rdo_gender_select</item>
        <item name="android:textSize">@dimen/dp_14</item>
        <item name="android:fontFamily">@font/calibri_light</item>
    </style>

    <!-- =====================  -->

    <style name="input_group_block">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@drawable/drawable_input_group_background</item>
    </style>

    <style name="input_group_image">
        <item name="android:layout_width">@dimen/dp_17</item>
        <item name="android:layout_height">@dimen/dp_17</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_marginStart">@dimen/dp_10</item>
        <item name="android:layout_marginEnd">@dimen/dp_10</item>
    </style>

    <!-- ===================== -->

    <style name="panel">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginTop">@dimen/dp_20</item>
        <item name="android:background">@drawable/drawable_rounded_white_back</item>
    </style>

    <style name="panel_header">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/drawable_panel_header_back</item>
    </style>

    <style name="panel_body">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/dp_10</item>
    </style>

    <style name="panel_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/dp_10</item>
        <item name="android:textSize">@dimen/dp_12</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/calibri_bold</item>
    </style>

    <!-- ===================== -->

    <style name="my_edittext_super">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/drawable_edittext_background</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="my_edittext_transparent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/drawable_edittext_transparent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center|start</item>
        <item name="android:textColor">@color/et_text</item>
        <item name="android:textColorHint">@color/et_placeholder</item>
        <item name="android:textSize">@dimen/dp_12</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/calibri_regular</item>
    </style>

    <style name="my_input_group_edittext">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/drawable_input_group_edittext</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center|start</item>
        <item name="android:textColor">@color/et_text</item>
        <item name="android:textColorHint">@color/et_placeholder</item>
        <item name="android:textSize">@dimen/dp_12</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/calibri_regular</item>
    </style>

    <style name="my_edittext">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/drawable_edittext</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center|start</item>
        <item name="android:textColor">@color/et_text</item>
        <item name="android:textColorHint">@color/et_placeholder</item>
        <item name="android:textSize">@dimen/dp_12</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/calibri_regular</item>
    </style>

    <style name="my_textarea">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/drawable_edittext</item>
        <item name="android:gravity">top|start</item>
        <item name="android:minLines">5</item>
        <item name="android:maxLines">5</item>
        <item name="android:textColor">@color/et_text</item>
        <item name="android:textColorHint">@color/et_placeholder</item>
        <item name="android:textSize">@dimen/dp_12</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:inputType">textMultiLine|textCapSentences</item>
        <item name="android:fontFamily">@font/calibri_regular</item>
    </style>

    <style name="spinner_with_arrow" >
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/drawable_spinner_with_arrow</item>
        <item name="android:gravity">center|start</item>
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="android:textColorHint">@color/et_placeholder</item>
        <item name="android:textColor">@color/et_text</item>
        <item name="android:fontFamily">@font/calibri_regular</item>
        <item name="android:singleLine">true</item>
    </style>


    <style name="my_value">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/et_text</item>
        <item name="android:textSize">@dimen/dp_18</item>
        <item name="android:padding">@dimen/dp_10</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/calibri_regular</item>
    </style>


</resources>