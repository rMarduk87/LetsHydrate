<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/initUserInfoParentLayout"
    android:background="@color/white"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <TextView
        android:id="@+id/textView4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="8dp"
        android:text="@string/init_user_info_climate"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.081" />


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/btnCold"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginEnd="80dp"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/cold" />

    <TextView
        android:id="@+id/coldTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cold"
        android:textStyle="bold"
        android:layout_marginTop="144dp"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@+id/btnCold"
        app:layout_constraintRight_toRightOf="@+id/btnCold"
        app:layout_constraintTop_toTopOf="@+id/btnCold"
        app:layout_constraintBottom_toBottomOf="@+id/btnCold" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/btnFresh"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="80dp"
        app:layout_constraintEnd_toEndOf="@+id/textView4"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/fresh" />

    <TextView
        android:id="@+id/freshTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fresh"
        android:textStyle="bold"
        android:layout_marginTop="144dp"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@+id/btnFresh"
        app:layout_constraintRight_toRightOf="@+id/btnFresh"
        app:layout_constraintTop_toTopOf="@+id/btnFresh"
        app:layout_constraintBottom_toBottomOf="@+id/btnFresh" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/btnMild"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginEnd="80dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/btnCold"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/mild" />

    <TextView
        android:id="@+id/mildTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mild"
        android:textStyle="bold"
        android:layout_marginTop="144dp"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@+id/btnMild"
        app:layout_constraintRight_toRightOf="@+id/btnMild"
        app:layout_constraintTop_toTopOf="@+id/btnMild"
        app:layout_constraintBottom_toBottomOf="@+id/btnMild" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/btnTorrid"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="@+id/textView4"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnFresh"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/torrid" />

    <TextView
        android:id="@+id/torridTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/torrid"
        android:textStyle="bold"
        android:layout_marginTop="144dp"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@+id/btnTorrid"
        app:layout_constraintRight_toRightOf="@+id/btnTorrid"
        app:layout_constraintTop_toTopOf="@+id/btnTorrid"
        app:layout_constraintBottom_toBottomOf="@+id/btnTorrid" />


</androidx.constraintlayout.widget.ConstraintLayout>